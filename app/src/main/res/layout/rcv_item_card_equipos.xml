<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <androidx.cardview.widget.CardView
        android:id="@+id/card_300"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        android:padding="10dp"
        android:elevation="5dp"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_fotoEquipo_300"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/cancha"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:background="#86232222"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_nombreEquipo_300"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="#fff"
                        android:text="Amazon Cares"
                        android:textStyle="bold"
                        android:textSize="30sp" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cdv_foto_equipo"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        android:padding="10dp"
        android:elevation="5dp"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_fotoEquipo"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/cancha"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:background="#86232222"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_nombreEquipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="#fff"
                        android:text="Amazon Cares"
                        android:textStyle="bold"
                        android:textSize="30sp" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>