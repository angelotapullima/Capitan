<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.Registro_Torneo.CrearEquipos.RegistrarEquipoEnGrupo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/layoutmedio"
            android:background="#fff"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registro de Equipos "
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:textColor="#FF757575"
                android:textStyle="bold"
                android:layout_gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_below="@+id/app"
                android:layout_height="1dp"
                android:background="#f6f6f6" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rcv_equipos_en_grupos"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <Button

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="15dp"
                    android:id="@+id/btnNext_a_instancias"
                    android:text="Siguiente"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>