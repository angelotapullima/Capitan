<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegistroReserva.ReservaEnBusqueda">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reservar Cancha"
                        android:textStyle="bold"
                        android:textSize="19sp"
                        android:textColor="#fff"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:id="@+id/nombre_empresa"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:textStyle="bold"
                            android:textSize="21sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/calendar"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:id="@+id/fecha_r"
                            android:text=""/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/ic_clock"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:id="@+id/hora_r"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text=""/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre de la Reserva"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/edt_bordes"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp">

                        <EditText
                            android:id="@+id/nombre_reserva_busqueda"
                            android:layout_width="match_parent"
                            android:layout_height="39dp"
                            android:backgroundTint="@color/transparent"
                            android:hint="Nombre "
                            android:inputType="textPersonName" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo de pago"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_spinner"
                        android:orientation="vertical">
                        <Spinner
                            android:id="@+id/spn_tipo_pago_busqueda"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:entries="@array/tipo_pago"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:popupBackground="@color/colorCeniza" />



                    </com.google.android.material.textfield.TextInputLayout>


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Cancha"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_spinner"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/spn_cancha_busqueda"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/colorPrimaryDark"
                                android:popupBackground="@color/colorCeniza" />


                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/l_todo"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Seleccionar Equipo"
                                android:textStyle="bold"
                                android:textSize="18sp"/>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_spinner"
                                android:id="@+id/InputSpinner"
                                android:orientation="vertical">

                                <Spinner
                                    android:id="@+id/spn_equipex_busqueda"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:backgroundTint="@color/colorPrimaryDark"
                                    android:popupBackground="@color/colorCeniza" />


                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_spinner"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:padding="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="7"
                                    android:layout_height="wrap_content"
                                    android:text="Costo de la Cancha"
                                    android:layout_marginTop="10dp"
                                    android:textStyle="bold"
                                    android:textSize="18sp"/>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="40dp"
                                        android:gravity="center"
                                        android:src="@drawable/bufeo_coin" />

                                    <TextView
                                        android:id="@+id/total_cancha_todo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginTop="10dp"
                                        android:gravity="center"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                </LinearLayout>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:padding="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="7"
                                    android:layout_height="wrap_content"
                                    android:text="Reserva"
                                    android:layout_marginTop="10dp"
                                    android:textStyle="bold"
                                    android:textSize="18sp"/>
                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="40dp"
                                            android:gravity="center"
                                            android:src="@drawable/bufeo_coin"/>
                                        <EditText
                                            android:id="@+id/pago1_todo"
                                            android:layout_width="match_parent"
                                            android:background="@color/transparent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="0"
                                            android:inputType="numberDecimal"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="10dp"
                                            android:textStyle="bold"
                                            android:textSize="18sp"/>

                                    </LinearLayout>
                                </RelativeLayout>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:padding="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="7"
                                    android:layout_height="wrap_content"
                                    android:text="Comisión"
                                    android:layout_marginTop="10dp"
                                    android:textStyle="bold"
                                    android:textSize="18sp"/>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="3"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/bufeo_coin"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:id="@+id/comision_todo"
                                        android:layout_marginTop="10dp"
                                        android:textStyle="bold"
                                        android:textSize="18sp"/>

                                </LinearLayout>

                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#DDDDDD"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:padding="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="7"
                                    android:layout_height="wrap_content"
                                    android:text="Total a pagar"
                                    android:layout_marginTop="10dp"
                                    android:textStyle="bold"
                                    android:textSize="18sp"/>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="3"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/bufeo_coin"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:gravity="center"
                                        android:id="@+id/pago_total_todo"
                                        android:layout_marginTop="10dp"
                                        android:textStyle="bold"
                                        android:textSize="18sp"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10"
                            android:padding="5dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_spinner">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="7"
                                android:layout_height="wrap_content"
                                android:text="Saldo Actual"
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:textSize="18sp"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="40dp"
                                    android:gravity="center"
                                    android:src="@drawable/bufeo_coin"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/saldo_bufis_busqueda"
                                    android:gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="10dp"
                                    android:textStyle="bold"
                                    android:textSize="18sp"/>

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:weightSum="10">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:id="@+id/btn_reservar_busqueda"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:background="@drawable/accent"
                                android:layout_weight="4.8">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#fff"
                                    android:textSize="17sp"
                                    android:textStyle="bold"
                                    android:text="Reservar"
                                    android:gravity="center"/>

                            </LinearLayout>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".4"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:id="@+id/btn_cerrar_dialog_busqueda"
                                android:gravity="center"
                                android:background="@drawable/agregar_equipo"
                                android:layout_weight="4.8">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#fff"
                                    android:textSize="17sp"
                                    android:textStyle="bold"
                                    android:text="Cancelar"
                                    android:gravity="center"/>

                            </LinearLayout>



                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/l_chancha">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_spinner"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:padding="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="7"
                                    android:layout_height="wrap_content"
                                    android:text="Reserva"
                                    android:layout_marginTop="10dp"
                                    android:textStyle="bold"
                                    android:textSize="18sp"/>
                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="40dp"
                                            android:gravity="center"
                                            android:src="@drawable/bufeo_coin"/>
                                        <TextView
                                            android:id="@+id/pago1_chancha"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="10dp"
                                            android:textStyle="bold"
                                            android:textSize="18sp"/>

                                    </LinearLayout>
                                </RelativeLayout>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:padding="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="7"
                                    android:layout_height="wrap_content"
                                    android:text="Comisión"
                                    android:layout_marginTop="10dp"
                                    android:textStyle="bold"
                                    android:textSize="18sp"/>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="3"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/bufeo_coin"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:id="@+id/comision_chancha"
                                        android:layout_marginTop="10dp"
                                        android:textStyle="bold"
                                        android:textSize="18sp"/>

                                </LinearLayout>

                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#DDDDDD"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="10"
                                android:padding="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="7"
                                    android:layout_height="wrap_content"
                                    android:text="Total a pagar"
                                    android:layout_marginTop="10dp"
                                    android:textStyle="bold"
                                    android:textSize="18sp"/>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="3"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/bufeo_coin"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:gravity="center"
                                        android:id="@+id/pago_total_chancha"
                                        android:layout_marginTop="10dp"
                                        android:textStyle="bold"
                                        android:textSize="18sp"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rcv_colaboraciones_busqueda"/>
                    </LinearLayout>







                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>