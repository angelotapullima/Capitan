<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".Activity.RegistroReserva.ReservaEnBusqueda">





    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/recargaSaldo"
                        android:visibility="gone"
                        android:background="#000">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:gravity="center"
                            android:text="presione para recargar su saldo"
                            android:layout_gravity="center"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="250dp"
                                android:id="@+id/img_canchex"
                                android:src="@drawable/cancha"
                                android:scaleType="centerCrop"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_alignParentBottom="true"
                                android:layout_height="wrap_content"
                                android:background="#59000000"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="gtgetghtehte"
                                        android:textColor="#FFF"
                                        android:id="@+id/nombre_empresa"
                                        android:layout_gravity="center"
                                        android:layout_margin="2dp"
                                        android:textStyle="bold"
                                        android:textSize="21sp"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:weightSum="10"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_weight="3">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Costo"
                                            android:textColor="#FFF"
                                            android:layout_gravity="center"
                                            android:layout_margin="2dp"
                                            android:textStyle="bold"
                                            android:textSize="18sp"/>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:layout_width="30dp"
                                                android:layout_height="40dp"
                                                android:gravity="center"
                                                android:src="@drawable/bufeo_coin" />

                                            <TextView
                                                android:id="@+id/costo"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:gravity="center"
                                                android:textColor="#FFF"
                                                android:textSize="18sp"
                                                android:textStyle="bold" />

                                        </LinearLayout>
                                    </LinearLayout>
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_marginLeft="2dp"
                                        android:layout_marginRight="2dp"
                                        android:layout_height="match_parent"
                                        android:background="#FFF"/>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_weight="3">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="ComisiÃ³n"
                                            android:layout_gravity="center"
                                            android:layout_margin="2dp"
                                            android:textStyle="bold"
                                            android:textColor="#FFF"
                                            android:textSize="18sp"/>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:layout_width="30dp"
                                                android:layout_height="40dp"
                                                android:src="@drawable/bufeo_coin" />

                                            <TextView
                                                android:id="@+id/comision"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:gravity="center"
                                                android:textColor="#FFF"
                                                android:layout_marginLeft="5dp"
                                                android:textSize="18sp"
                                                android:textStyle="bold" />

                                        </LinearLayout>
                                    </LinearLayout>
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_marginLeft="2dp"
                                        android:layout_marginRight="2dp"
                                        android:layout_height="match_parent"
                                        android:background="#FFF"/>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_weight="3">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Total"
                                            android:layout_gravity="center"
                                            android:layout_margin="2dp"
                                            android:textColor="#FFF"
                                            android:textStyle="bold"
                                            android:textSize="18sp"/>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:layout_width="30dp"
                                                android:layout_height="40dp"
                                                android:gravity="center"
                                                android:src="@drawable/bufeo_coin" />

                                            <TextView
                                                android:id="@+id/total"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:gravity="center"
                                                android:textColor="#FFF"
                                                android:textSize="18sp"
                                                android:textStyle="bold" />

                                        </LinearLayout>
                                    </LinearLayout>


                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="16dp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/calendar" />

                                <TextView
                                    android:id="@+id/fecha_r"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:text=""
                                    android:textColor="@color/colorRojo"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/ic_clock" />

                                <Spinner
                                    android:id="@+id/spn_tipo_pago_busqueda"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:backgroundTint="@color/colorPrimaryDark"
                                    android:entries="@array/tipo_pago"
                                    android:popupBackground="@color/colorCeniza" />

                                <TextView
                                    android:id="@+id/hora_r"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:text=""
                                    android:textColor="@color/colorRojo"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nombre de la Reserva"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                style="@style/cajaDeTexto"
                                android:layout_marginBottom="10dp">

                                <EditText
                                    android:id="@+id/nombre_reserva_busqueda"
                                    style="@style/InputTexto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Nombre "
                                    android:inputType="textPersonName" />

                                <Spinner
                                    android:id="@+id/spn_equipex_busqueda"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:backgroundTint="@color/colorPrimaryDark"
                                    android:popupBackground="@color/colorCeniza" />
                            </LinearLayout>


                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Cancha"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:background="@drawable/bgnoseleccionado"
                                    android:orientation="vertical">

                                    <Spinner
                                        android:id="@+id/spn_cancha_busqueda"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:backgroundTint="@color/colorPrimaryDark"
                                        android:popupBackground="@color/colorCeniza" />


                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Tipo de pago"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/bgnoseleccionado"
                                android:orientation="vertical">


                            </com.google.android.material.textfield.TextInputLayout>


                            <LinearLayout
                                android:id="@+id/l_todo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Seleccionar Equipo"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/InputSpinner"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:background="@drawable/bgnoseleccionado"
                                        android:orientation="vertical">


                                    </com.google.android.material.textfield.TextInputLayout>
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/bgnoseleccionado"
                                    android:orientation="horizontal"
                                    android:padding="5dp"
                                    android:weightSum="10">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:layout_weight="7"
                                        android:text="Saldo Actual"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="3"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="40dp"
                                            android:gravity="center"
                                            android:src="@drawable/bufeo_coin" />

                                        <TextView
                                            android:id="@+id/saldo_bufis_busqueda"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="10dp"
                                            android:gravity="center"
                                            android:textSize="18sp"
                                            android:textStyle="bold" />

                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal"
                                    android:weightSum="10">

                                    <LinearLayout
                                        android:id="@+id/btn_reservar_busqueda"
                                        android:layout_width="0dp"
                                        android:layout_height="40dp"
                                        android:layout_weight="4.8"
                                        android:background="@drawable/accent"
                                        android:gravity="center">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="Reservar"
                                            android:textColor="#fff"
                                            android:textSize="17sp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <View
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight=".4" />

                                    <LinearLayout
                                        android:id="@+id/btn_cerrar_busqueda"
                                        android:layout_width="0dp"
                                        android:layout_height="40dp"
                                        android:layout_weight="4.8"
                                        android:background="@drawable/agregar_equipo"
                                        android:gravity="center">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="Cancelar"
                                            android:textColor="#fff"
                                            android:textSize="17sp"
                                            android:textStyle="bold" />

                                    </LinearLayout>


                                </LinearLayout>
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/l_chancha"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/noChanchas"
                                        android:layout_width="match_parent"
                                        android:layout_height="280dp"
                                        android:layout_marginTop="20dp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/ic_nochanchas" />
                                </RelativeLayout>


                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rcv_colaboraciones_busqueda"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStartWithNavigation="0dp"
        android:background="#59000000">


    </androidx.appcompat.widget.Toolbar>





</androidx.coordinatorlayout.widget.CoordinatorLayout>