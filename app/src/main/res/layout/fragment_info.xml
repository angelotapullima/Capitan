<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FA"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStartWithNavigation="0dp"
        android:background="@color/colorPrimary"/>





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_iconoPerfil"
                        android:layout_width="70dp"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/colorPrimary"
                        android:layout_height="90dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_gravity="center"
                        android:layout_margin="8dp" />
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txt_tituloPerfil"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="#383838"
                                android:textSize="22dp"
                                android:text="Cuenta"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </RelativeLayout>

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/email"
                            android:text="angelo.anked@gmail.com"
                            android:textColor="#000"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/blue_A400"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:text="Ver perfil" />
                </LinearLayout>



            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="no se que poner aca, pero piensen"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="1dp"
                android:elevation="2dp"
                app:cardCornerRadius="8dp"
                android:background="@drawable/bg_info"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--Bufis-->
                    <LinearLayout
                        style="@style/cardInfo"
                        android:id="@+id/bufis">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/bufeo_coin"/>
                        <TextView
                            android:text="Bufis"
                            style="@style/TextInfo"/>
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="#DBDDDF"/>
                    <!--Mis Movimientos-->
                    <LinearLayout
                        style="@style/cardInfo"
                        android:id="@+id/misMovimientos">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/bufeo_coin"/>
                        <TextView
                            android:text="Mis Movimientos"
                            style="@style/TextInfo"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="#DBDDDF"/>

                    <!--Mis Reservas-->
                    <LinearLayout
                        style="@style/cardInfo"
                        android:id="@+id/detalleMisReservas">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/bufeo_coin"/>
                        <TextView
                            android:text="Mis Reservas"
                            style="@style/TextInfo"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="#DBDDDF"/>
                    <!--Solicitar Recargas-->
                    <LinearLayout
                        style="@style/cardInfo"
                        android:id="@+id/realizarRecarga">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/bufeo_coin"/>
                        <TextView
                            android:text="Solicitar Recargas"
                            style="@style/TextInfo"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="#DBDDDF"/>
                    <!--Mensajes-->
                    <LinearLayout
                        style="@style/cardInfo"
                        android:id="@+id/mensajes">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/bufeo_coin"/>
                        <TextView
                            android:text="Mensajes"
                            style="@style/TextInfo"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="#DBDDDF"/>
                    <!--crear chancha-->
                    <LinearLayout
                        style="@style/cardInfo"
                        android:id="@+id/Chanchex">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/bufeo_coin"/>
                        <TextView
                            android:text="Crear Chancha"
                            style="@style/TextInfo"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:text="Asistencia"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="1dp"
                android:elevation="2dp"
                app:cardCornerRadius="8dp"
                android:background="@drawable/bg_info"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--Bufis-->
                    <LinearLayout
                        style="@style/cardInfo">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_info"/>
                        <TextView
                            android:text="Guía para Manejo de la App"
                            style="@style/TextInfo"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="#DBDDDF"/>
                    <LinearLayout
                        style="@style/cardInfo">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_question"/>
                        <TextView
                            android:text="Contactar al equipo de soporte"
                            style="@style/TextInfo"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="#DBDDDF"/>
                    <LinearLayout
                        style="@style/cardInfo">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_comment"/>
                        <TextView
                            android:text="Dejar comentario"
                            style="@style/TextInfo"/>
                    </LinearLayout>



                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:text="Aplicación"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="1dp"
                android:elevation="2dp"
                app:cardCornerRadius="8dp"
                android:background="@drawable/bg_info"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--Bufis-->
                    <LinearLayout
                        style="@style/cardInfo">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_eye"/>
                        <TextView
                            android:text="Política de privacidad"
                            style="@style/TextInfo"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="#DBDDDF"/>
                    <LinearLayout
                        style="@style/cardInfo">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_settings"/>
                        <TextView
                            android:text="Términos de servicio"
                            style="@style/TextInfo"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="#DBDDDF"/>
                    <LinearLayout
                        style="@style/cardInfo">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_phone"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:text="App versión"
                                style="@style/TextInfo"/>
                            <TextView
                                android:text="1.0"
                                android:layout_marginLeft="10dp"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:elevation="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="8dp"
                android:background="@drawable/bg_info"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/logout"
                        android:padding="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Cerrar sesión"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/red_400"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    </LinearLayout>
